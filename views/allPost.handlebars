<div class="posts">
  {{#each posts}}
    <article class="card">
      <div class="card-header flex-row justify-space-between">
        <h2>
          <a href="/post/{{id}}" class="post-link">{{title}}</a>
        </h2>
        <div class="post-info">
          Posted by {{User.username}} on {{format_date createdAt}}
        </div>
      </div>
      <div class="card-body">
        {{body}}
      </div>
    </article>
  {{/each}}
</div>
